    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_no, item_no, item_count, production_count, order_dtl_status, need_mid_count, updated_by, updated_time,
        created_by, created_time
    </sql>


<!--新增  查询t_order_dtl明细   -->
    <select id="selectDtlWithItemPage原始" resultType="cn.jb.boot.biz.order.vo.response.OrderDtlPageResponse">
        SELECT
        od.id,
        od.order_no,
        od.item_no,
        od.item_count,
        od.production_count,
        od.order_dtl_status,
        od.need_mid_count,
        od.updated_by,
        od.updated_time,
        od.created_by,
        od.created_time,
        mis.item_name
        FROM
        t_order_dtl od
        LEFT JOIN
        mes_item_stock mis ON od.item_no = mis.item_no
        <where>
            <if test="p.orderNo != null and p.orderNo != ''">
                AND od.order_no LIKE CONCAT('%', #{p.orderNo}, '%')
            </if>
            <if test="p.orderDtlStatus != null and p.orderDtlStatus != ''">
                AND od.order_dtl_status = #{p.orderDtlStatus}
            </if>
        </where>
        ORDER BY od.created_time DESC
    </select>


    <!-- 查询 t_order_dtl 明细 + 顶层 BOM_NO -->
    <select id="selectDtlWithItemPage"
            resultType="cn.jb.boot.biz.order.vo.response.OrderDtlPageResponse">
        SELECT
        od.id,
        od.order_no,
        od.item_no,
        od.item_count,
        od.production_count,
        od.order_dtl_status,
        od.need_mid_count,
        od.updated_by,
        od.updated_time,
        od.created_by,
        od.created_time,
        mis.item_name,
        -- 左连接生产单，拿到生产单里的 item_no（顶层物料）
        po.item_no          AS production_item_no,
        -- 再左连接 mes_item_stock，拿到顶层物料的 bom_no
        topMis.bom_no       AS top_bom_no
        FROM t_order_dtl od
        LEFT JOIN mes_item_stock mis
        ON od.item_no = mis.item_no
        LEFT JOIN t_production_order po
        ON po.sales_order_no = od.order_no
        LEFT JOIN mes_item_stock topMis
        ON topMis.item_no = po.item_no
        <where>
            <if test="p.orderNo != null and p.orderNo != ''">
                AND od.order_no LIKE CONCAT('%', #{p.orderNo}, '%')
            </if>
            <if test="p.orderDtlStatus != null and p.orderDtlStatus != ''">
                AND od.order_dtl_status = #{p.orderDtlStatus}
            </if>
            <!-- 新增：物料名称模糊查询 -->
            <if test="p.itemName != null and p.itemName != ''">
                AND mis.item_name LIKE CONCAT('%', #{p.itemName, jdbcType=VARCHAR}, '%')
            </if>
        </where>
        ORDER BY od.created_time DESC
    </select>


    <!--    -&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&# 查询t_order_dtl明细   订单分组 （简单版适用于只需要基本订单信息的场景）45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->

    <!-- ① 统计不同 order_no 数量 -->
    <select id="countGroupByOrderNo"
            resultType="long"
            parameterType="cn.jb.boot.biz.order.vo.request.OrderDtlPageRequest">
        SELECT COUNT(DISTINCT d.order_no)
        FROM t_order_dtl d
        LEFT JOIN mes_item_stock mis ON d.item_no = mis.item_no
        LEFT JOIN t_production_order po ON po.sales_order_no = d.order_no
        LEFT JOIN mes_item_stock topMis ON topMis.item_no = po.item_no
        <where>
            <if test="orderNo != null and orderNo != ''">
                AND d.order_no LIKE CONCAT('%', #{orderNo}, '%')
            </if>
            <if test="orderDtlStatus != null and orderDtlStatus != ''">
                AND d.order_dtl_status = #{orderDtlStatus}
            </if>
            <if test="itemName != null and itemName != ''">
                AND mis.item_name LIKE CONCAT('%', #{itemName}, '%')
            </if>
            <if test="bomNo != null and bomNo != ''">
                AND topMis.bom_no LIKE CONCAT('%', #{bomNo}, '%')
            </if>
        </where>
    </select>

    <!-- ② 取得当页需要的 order_no 列表 -->
    <select id="selectPageOrderNos"
            resultType="string"
            parameterType="map">
        SELECT d.order_no
        FROM t_order_dtl d
        LEFT JOIN mes_item_stock mis ON d.item_no = mis.item_no
        LEFT JOIN t_production_order po ON po.sales_order_no = d.order_no
        LEFT JOIN mes_item_stock topMis ON topMis.item_no = po.item_no
        <where>
            <if test="dto.orderDtlStatus != null and dto.orderDtlStatus != ''">
                AND d.order_dtl_status = #{dto.orderDtlStatus}
            </if>
            <if test="dto.orderNo != null and dto.orderNo != ''">
                AND d.order_no LIKE CONCAT('%', #{dto.orderNo}, '%')
            </if>
            <if test="dto.itemName != null and dto.itemName != ''">
                AND mis.item_name LIKE CONCAT('%', #{dto.itemName}, '%')
            </if>
            <if test="dto.bomNo != null and dto.bomNo != ''">
                AND topMis.bom_no LIKE CONCAT('%', #{dto.bomNo}, '%')
            </if>
        </where>
        GROUP BY d.order_no
        ORDER BY MAX(d.created_time) DESC
        LIMIT #{offset}, #{size}
    </select>

    <!-- ③ 查询整组明细并携带顶层 BOM -->
    <select id="selectDtlWithItemAndTopBomByOrderNos"
            resultType="cn.jb.boot.biz.order.vo.response.OrderDtlPageResponse"
            parameterType="java.util.List">
        SELECT
        d.id,
        d.order_no          AS orderNo,
        d.item_no           AS itemNo,
        d.item_count        AS itemCount,
        IFNULL(pa.prod_count, 0) AS productionCount,  -- 改为查询分配表的 prod_count
        d.production_count  AS productionCount,
        d.order_dtl_status  AS orderDtlStatus,
        d.need_mid_count    AS needMidCount,
        d.created_time      AS createdTime,
        d.updated_time      AS updatedTime,
        mis.bom_no          AS bomNo,
        mis.item_name       AS itemName,
        topMis.bom_no       AS topBomNo
        FROM t_order_dtl d
        LEFT JOIN mes_item_stock mis ON d.item_no = mis.item_no
        LEFT JOIN t_production_order po ON po.sales_order_no = d.order_no
        LEFT JOIN mes_item_stock topMis ON topMis.item_no = po.item_no
        LEFT JOIN t_proc_allocation pa     -- 新增：关联工序分配表
                ON pa.order_dtl_id = d.id
                AND pa.seq_no = (SELECT MAX(seq_no)
                FROM t_proc_allocation
                WHERE order_dtl_id = d.id)  -- 取最后一道工序

        WHERE d.order_no IN
        <foreach collection="orderNos" item="ono" open="(" separator="," close=")">
            #{ono}
        </foreach>
        <if test="dto.orderDtlStatus != null and dto.orderDtlStatus != ''">
            AND d.order_dtl_status = #{dto.orderDtlStatus}
        </if>
        <if test="dto.orderNo != null and dto.orderNo != ''">
            AND d.order_no LIKE CONCAT('%', #{dto.orderNo}, '%')
        </if>
        <if test="dto.itemName != null and dto.itemName != ''">
            AND mis.item_name LIKE CONCAT('%', #{dto.itemName}, '%')
        </if>
        <if test="dto.bomNo != null and dto.bomNo != ''">
            AND topMis.bom_no = #{dto.bomNo} <!-- 母件 BOM 过滤 -->
        </if>
#         ORDER BY d.order_no, d.created_time DESC
        ORDER BY d.created_time DESC
    </select>


