    <!-- OrderDtlMapper.xml 中的 pageInfo 查询 -->
    <select id="pageInfo"
            resultType="cn.jb.boot.biz.order.vo.response.OrderDtlPageResponse"
            parameterType="cn.jb.boot.biz.order.vo.request.OrderDtlPageRequest">

        SELECT
        d.id,
        d.order_no          AS orderNo,
        d.item_no           AS itemNo,
        d.item_count        AS itemCount,
        IFNULL(SUM(wr.real_count),0) AS productionCount,
        d.order_dtl_status  AS orderDtlStatus,
        d.need_mid_count    AS needMidCount,
        d.updated_by,
        d.updated_time      AS updatedTime,
        d.created_by,
        d.created_time      AS createdTime,
        mis.bom_no          AS bomNo
        FROM t_order_dtl d
        LEFT JOIN mes_item_stock mis
        ON d.item_no = mis.item_no
        LEFT JOIN t_work_order wo
        ON wo.order_dtl_id = d.id
        LEFT JOIN t_work_report wr
        ON wr.work_order_id = wo.id AND wr.status = '03'
        <where>
            <if test="p.childItemNos != null and p.childItemNos.size() > 0">
                d.item_no IN
                <foreach collection="p.childItemNos" item="itemNo"
                         open="(" separator="," close=")">
                    #{itemNo}
                </foreach>
            </if>
            <if test="p.orderStatus != null and p.orderStatus != ''">
                AND d.order_dtl_status = #{p.orderStatus}
            </if>
            <if test="p.beginTime != null and p.beginTime != ''">
                AND d.created_time &gt;= STR_TO_DATE(CONCAT(#{p.beginTime},' 00:00:00'), '%Y-%m-%d %H:%i:%s')

            </if>
            <if test="p.endTime != null and p.endTime != ''">
                AND d.created_time &lt;= STR_TO_DATE(CONCAT(#{p.endTime},' 23:59:59'), '%Y-%m-%d %H:%i:%s')
            </if>
        </where>
        GROUP BY d.id
        ORDER BY d.created_time DESC
    </select>

